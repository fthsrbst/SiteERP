@model RestoranSiteV2.Models.Siniflar.Kategori
@{
    ViewBag.Title = "Kategori Güncelleme";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 mx-auto" style="max-width: 500px;">
        <div class="card-header bg-warning text-white">
            <h4 class="mb-0 text-center">Kategori Güncelleme</h4>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("KategoriGuncelle", "Kategori", FormMethod.Post))
            {
                @Html.HiddenFor(x => x.KategoriID)
                <div class="mb-3">
                    @Html.LabelFor(x => x.KategoriAd, null, new { @class = "form-label fw-bold" })
                    @Html.TextBoxFor(x => x.KategoriAd, new { @class = "form-control rounded-pill mx-auto", style = "max-width: 400px;" })
                </div>
                <div class="text-center mt-4">
                    <button class="btn btn-warning rounded-pill px-4 py-2">Güncelle</button>
                </div>
            }
        </div>
    </div>
</div>
