@model RestoranSiteV2.Models.Siniflar.Kategori
@{
    ViewBag.Title = "Yeni Kategori";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow-lg border-0" style="width: 400px;">
        <div class="card-header bg-info text-white text-center">
            <h4 class="mb-0">Yeni Kategori Ekle</h4>
        </div>
        <div class="card-body">
            <form class="form-group" method="post">
                <div class="mb-3">
                    @Html.LabelFor(x => x.KategoriAd, null, new { @class = "form-label fw-bold" })
                    @Html.TextBoxFor(x => x.KategoriAd, new { @class = "form-control rounded-pill", style = "max-width: 300px; margin: 0 auto;" })
                </div>
                <div class="text-center mt-4">
                    <button class="btn btn-info rounded-pill px-4 py-2">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>
